@using PagedList.Mvc;
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var product = (PagedList.IPagedList<DCCovid.Models.Product>)ViewBag.Product;
    var user = (List<DCCovid.Models.User>)ViewBag.User;
    var post = (List<DCCovid.Models.PostCMT>)ViewBag.Post;
    var img = (List<DCCovid.Models.Image>)ViewBag.img;

}
<section class="showTime">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">

                <a class="nav-link active" id="all-tab" data-toggle="tab" href="#all" role="tab"
                   aria-controls="home" aria-selected="true">Tất cả</a>
            </li>

            <li class="nav-item" role="presentation">

                <a class="nav-link" id="product-tab" data-toggle="tab" href="#product" role="tab"
                   aria-controls="home" aria-selected="true">product</a>
            </li>
            <li class="nav-item" role="presentation">

                <a class="nav-link" id="user-tab" data-toggle="tab" href="#user" role="tab"
                   aria-controls="home" aria-selected="true">user</a>
            </li>
            <li class="nav-item" role="presentation">

                <a class="nav-link" id="post-tab" data-toggle="tab" href="#post" role="tab"
                   aria-controls="home" aria-selected="true">post</a>
            </li>




        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade" id="all" role="tabpanel" aria-labelledby="all-tab">

                @foreach (var item in product)
                {
                    <div class="row showTimes__movie my-4">
                        <div class="col-2">
                            <img src="~/Assets/Thumbnails/@item.Image" class="img-fluid" height="50px" />
                        </div>
                        <div class="col-10">
                            <div>
                                <div class="showTimes__detail">
                                    <a href="/product/detail/@item.ID"><h3 class="display-4">@item.Name</h3></a>


                                </div>
                            </div>

                        </div>
                    </div>
                }

                @foreach (var i in user)
                {
                    <div class="row showTimes__movie my-4">
                        <div class="col-2">
                            <img src="~/Assets/Thumbnails/avticon.png" class="img-fluid" height="50px" />
                        </div>
                        <div class="col-10">
                            <div>
                                <div class="showTimes__detail">
                                    <a href="/user/profile/@i.ID"><h3 class="display-4">@i.Name</h3></a>

                                    <form action="/Room/Create/@i.ID" , method="post">

                                        <input type="submit" value="Nhắn tin" class="btn">
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                }

                @foreach (var i in post)
                {
                    <div class="row showTimes__movie my-4">
                        <div class="col-2">
                            <img src="~/Assets/Thumbnails/@i.Image" class="img-fluid" height="50px" />
                        </div>
                        <div class="col-10">
                            <div>
                                <div class="showTimes__detail">
                                    <a href="/post/details/@i.ID"><h5>@Html.Raw(i.Text)</h5></a>


                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
            <div class="tab-pane fade" id="product" role="tabpanel" aria-labelledby="product-tab">

                @foreach (var item in product)
                {
                    <div class="row showTimes__movie my-4">
                        <div class="col-2">
                            <img src="~/Assets/Thumbnails/@item.Image" class="img-fluid" height="50px" />
                        </div>
                        <div class="col-10">
                            <div>
                                <div class="showTimes__detail">
                                    <a href="/product/detail/@item.ID"><h3 class="display-4">@item.Name</h3></a>


                                </div>
                            </div>

                        </div>
                    </div>
                }




            </div>

            <div class="tab-pane fade" id="user" role="tabpanel" aria-labelledby="user-tab">
                @foreach (var i in user)
                {
                    <div class="row showTimes__movie my-4">
                        <div class="col-2">
                            <img src="~/Assets/Thumbnails/avticon.png" class="img-fluid" height="50px" />
                        </div>
                        <div class="col-10">
                            <div>
                                <div class="showTimes__detail">
                                    <a href="/user/profile/@i.ID"><h3 class="display-4">@i.Name</h3></a>

                                    <form action="/Room/Create/@i.ID" , method="post">

                                        <input type="submit" value="Nhắn tin" class="btn">
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                }


            </div>
            <div class="tab-pane fade" id="post" role="tabpanel" aria-labelledby="post-tab">
                @foreach (var i in post)
                {
                    <div class="row showTimes__movie my-4">
                        <div class="col-2">
                            <img src="~/Assets/Thumbnails/@i.Image" class="img-fluid" height="50px" />
                        </div>
                        <div class="col-10">
                            <div>
                                <div class="showTimes__detail">
                                    <a href="/post/details/@i.ID"><h5>@Html.Raw(i.Text)</h5></a>


                                </div>
                            </div>

                        </div>
                    </div>
                }


            </div>



        </div>

        </div></section>