}

@section scripts
{
    <script>
        $(document).ready(function () {
            LoadData();
        });
       

        var path_to_delete;

        $(".deletePost").click(function (e) {
            path_to_delete = $(this).data('path');
        });
        $('#btnContinueDeletePost').click(function () {
            window.location = path_to_delete;
        });
    </script>
}

